{
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": false, // change to true for auto-formatting on save
    "editor.codeActionsOnSave": {
      "source.organizeImports": "never", // change to "explicit" to auto-sort imports
      "source.unusedImports": "never" // change to "explicit" to auto-remove unused imports
    }
  },
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.include": ["${workspaceFolder}/sandbox/crs/src"],
  "black-formatter.args": ["--config", "${workspaceFolder}/sandbox/crs/src/pyproject.toml"],
  "black-formatter.cwd": "${workspaceFolder}/sandbox/crs/src",
  "isort.args": [
    "--settings-file",
    "${workspaceFolder}/sandbox/crs/src/pyproject.toml"
  ],
  "isort.check": true
}
